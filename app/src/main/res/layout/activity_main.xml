<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teams Management"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:textSize="24sp"
         />

    <TextView
        android:id="@+id/tvLabelId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Id:"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        />

    <EditText
        android:id="@+id/etId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Id"
        app:layout_constraintLeft_toRightOf="@id/tvLabelId"
        app:layout_constraintBaseline_toBaselineOf="@id/tvLabelId"
        android:layout_margin="20dp"
         />



    <TextView
        android:id="@+id/tvLabelTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Name:"
        app:layout_constraintTop_toBottomOf="@id/etId"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"


         />

    <EditText
        android:id="@+id/etTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintLeft_toRightOf="@id/tvLabelTeamName"
        app:layout_constraintBaseline_toBaselineOf="@id/tvLabelTeamName"
        android:layout_margin="20dp"
         />

    <TextView
        android:id="@+id/tvTeamPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Photo:"
        app:layout_constraintTop_toBottomOf="@id/etTeamName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
         />

    <ImageView
        android:id="@+id/ivTeamPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toRightOf="@id/tvTeamPhoto"
        app:layout_constraintTop_toBottomOf="@id/etTeamName"
        android:layout_margin="20dp"
        android:src="@drawable/team"

        />

    <TextView
        android:id="@+id/tvLabelProjectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Title:"
        app:layout_constraintTop_toBottomOf="@id/ivTeamPhoto"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
         />

    <EditText
        android:id="@+id/etProjectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Project Title"
        app:layout_constraintLeft_toRightOf="@id/tvLabelProjectTitle"
        app:layout_constraintBaseline_toBaselineOf="@id/tvLabelProjectTitle"
        android:layout_margin="20dp"
         />

    <TextView
        android:id="@+id/tvLabelDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        app:layout_constraintTop_toBottomOf="@id/etProjectTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Description"
        app:layout_constraintLeft_toRightOf="@id/tvLabelDescription"
        app:layout_constraintBaseline_toBaselineOf="@id/tvLabelDescription"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/tvLabelTotalStories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Stories:"
        app:layout_constraintTop_toBottomOf="@id/etDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        />

    <EditText
        android:id="@+id/etTotalStories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@id/tvLabelTotalStories"
        app:layout_constraintBaseline_toBaselineOf="@id/tvLabelTotalStories"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/tvMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Members:"
        app:layout_constraintTop_toBottomOf="@id/etTotalStories"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/etMemberOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="member name"
        app:layout_constraintTop_toBottomOf="@+id/tvMembers"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        />

    <EditText
        android:id="@+id/etMemberTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="member name"
        app:layout_constraintTop_toBottomOf="@+id/etMemberOne"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        />

    <EditText
        android:id="@+id/etMemberThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="member name"
        app:layout_constraintTop_toBottomOf="@+id/etMemberTwo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        />

    <EditText
        android:id="@+id/etMemberFourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="member name"
        app:layout_constraintTop_toBottomOf="@+id/etMemberThree"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnFind"
        android:layout_margin="20dp"
         />
    <Button
        android:id="@+id/btnFind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnList"
        android:layout_margin="20dp"
        />
    <Button
        android:id="@+id/btnList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnQuit"
        android:layout_margin="20dp"
        />
    <Button
        android:id="@+id/btnQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quite"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>